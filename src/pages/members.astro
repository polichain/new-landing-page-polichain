              <Image
                src={member.image}
                alt={`${member.name} - ${member.role}`}
                width={128}
                height={128}
                class="absolute inset-0 w-full h-full object-cover rounded-full"
              />
            </div>
            <h3 class="text-xl font-bold mb-2 text-text">{member.name}</h3>
            <p class="text-text-muted">{member.role}</p>
