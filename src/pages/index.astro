---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { languages } from '../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('home.title')}>
  <main class="min-h-screen page-content">
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center overflow-hidden">
      <div class="container mx-auto px-4 text-center z-10">
        <h1 
          class="text-5xl md:text-7xl font-bold mb-6 text-text"
          data-aos="fade-up"
        >
          {t('home.title')}
        </h1>
        <p 
          class="text-xl md:text-2xl mb-12 text-text-muted max-w-3xl mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          {t('home.subtitle')}
        </p>
        <div 
          class="flex flex-wrap justify-center gap-4"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <a 
            href={`/${lang}/about`}
            class="px-8 py-3 rounded-full bg-accent text-text-inverted hover:bg-accent-hover transition-colors duration-300"
          >
            {t('nav.about')}
          </a>
          <a 
            href={`/${lang}/members`}
            class="px-8 py-3 rounded-full border border-accent/30 hover:border-accent text-text hover:bg-accent/10 transition-all duration-300"
          >
            {t('nav.members')}
          </a>
        </div>
      </div>
      
      <!-- Animated background elements -->
      <div class="absolute inset-0 -z-10">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-accent/20 rounded-full filter blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-accent/20 rounded-full filter blur-3xl animate-float" style="animation-delay: -2s;"></div>
        <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-accent/20 rounded-full filter blur-3xl animate-float" style="animation-delay: -4s;"></div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="py-24 bg-secondary/50">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Research Card -->
          <div class="group p-8 rounded-2xl bg-primary/50 backdrop-blur-xl border border-accent/10 hover:border-accent/30 transition-all duration-300" data-aos="fade-up">
            <div class="mb-4 text-accent group-hover:text-accent-hover transition-colors duration-300">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-text">{t('features.research.title')}</h3>
            <p class="text-text-muted">{t('features.research.description')}</p>
          </div>

          <!-- Development Card -->
          <div class="group p-8 rounded-2xl bg-primary/50 backdrop-blur-xl border border-accent/10 hover:border-accent/30 transition-all duration-300" data-aos="fade-up" data-aos-delay="100">
            <div class="mb-4 text-accent group-hover:text-accent-hover transition-colors duration-300">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-text">{t('features.development.title')}</h3>
            <p class="text-text-muted">{t('features.development.description')}</p>
          </div>

          <!-- Community Card -->
          <div class="group p-8 rounded-2xl bg-primary/50 backdrop-blur-xl border border-accent/10 hover:border-accent/30 transition-all duration-300" data-aos="fade-up" data-aos-delay="200">
            <div class="mb-4 text-accent group-hover:text-accent-hover transition-colors duration-300">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2 text-text">{t('features.community.title')}</h3>
            <p class="text-text-muted">{t('features.community.description')}</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>