---
import Navigation from '../components/Navigation.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import Footer from '../components/Footer.astro';
import '../styles/theme.css';
import 'aos/dist/aos.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title,
  description = "The Official Student Blockchain Club from the Polytechnic School of the University of SÃ£o Paulo",
  image = "https://utfs.io/f/c6DyH2jvBDjOFqgyiCONke3WnJPK4Dhwbg5cmBf8oCqv629a"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang={Astro.url.pathname.split('/')[1] || 'en'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    
    <!-- SEO Meta Tags -->
    <title>{title} | Polichain.xyz</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Polichain.xyz Blog RSS Feed" href="/rss.xml" />

    <!-- Robots -->
    <meta name="robots" content="index,follow" />
    
    <script is:inline>
      // Initialize theme before page load to prevent flash
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
      
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>
  <body class="bg-background text-text">
    <div class="fixed inset-0 bg-gradient-radial pointer-events-none"></div>
    <Navigation />
    <!-- Added pt-24 to create space below fixed header -->
    <div class="pt-24">
      <slot />
    </div>
    <Footer />
    <ThemeToggle />
    <script is:inline src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script is:inline>
      window.addEventListener('load', () => {
        AOS.init({
          duration: 600,
          once: true,
          mirror: false,
          disable: window.innerWidth < 768
        });
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    overflow-x: hidden;
  }

  h1, h2, h3, h4, h5, h6, .monospace {
    font-family: 'JetBrains Mono', monospace;
  }

  ::selection {
    background: var(--color-accent-muted);
    color: var(--color-text-inverted);
  }
  
  .page-content {
    animation: fadeIn 0.3s ease-in-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  * {
    transition-property: background-color, border-color, color, fill, stroke;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }

  [data-aos] {
    pointer-events: none;
  }
  [data-aos].aos-animate {
    pointer-events: auto;
  }
</style>